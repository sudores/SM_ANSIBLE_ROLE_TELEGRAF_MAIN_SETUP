# Tags which appended to all metrics
[global_tags]
  env = "{{ env }}"
  {% if telegraf_tags != none %}
  {% for k, v in telegraf_tags.items() %}
  {{ k }} = "{{ v }}"
  {% endfor %}   
  {% endif %}

# Configuration for telegraf agent
[agent]
  interval = "10s"
  round_interval = true
  metric_batch_size = 1000
  metric_buffer_limit = 10000
  collection_jitter = "0s"
  flush_interval = "10s"
  flush_jitter = "0s"
  precision = "ms"
  quiet = false  
  logtarget = "file"                              
  logfile = "/var/log/telegraf/telegraf.log"
  logfile_rotation_interval = "5d"                                          
  logfile_rotation_max_size = "100MB"                                       
  logfile_rotation_max_archives = 5                                         
  hostname = ""                                                             
  omit_hostname = false                                                     

